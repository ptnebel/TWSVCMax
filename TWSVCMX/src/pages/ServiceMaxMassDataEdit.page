                </apex:column>    
                <apex:column >
                    <apex:facet name="header"><apex:outputText value="City"></apex:outputText></apex:facet>       
                    <apex:inputField value="{!IP.SVMXC__City__c}"/>    
                </apex:column>   
                <apex:column >
                    <apex:facet name="header"><apex:outputText value="State"></apex:outputText></apex:facet>       
