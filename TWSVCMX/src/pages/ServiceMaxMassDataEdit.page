                <apex:column >
                    <apex:facet name="header">
                    <apex:commandLink rerender="IPSection" action="{!ViewInstalledProducts}" value="Serial Number{!IF(sortExpression=='SVMXC__Serial_Lot_Number__c',IF(sortDirection=='ASC','▼','▲'),'')}">
